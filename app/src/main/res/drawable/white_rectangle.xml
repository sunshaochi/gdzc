<?xml version="1.0" encoding="utf-8"?><!-- Style for "3_2" --><!-- Add this snippet to layer-list xml in drawable. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#203b6bd6" />
            <corners android:radius="7dp" />
            <gradient
                android:angle="270"
                android:endColor="@color/transparent"
                android:startColor="#3b6bd6"/>
        </shape>
    </item>        <!-- White Top color -->
    <item
        android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="7dp" />
        </shape>
    </item>
</layer-list>