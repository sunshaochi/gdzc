<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/item_title_transparent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="40dp"
        android:text="请设置密码"
        android:textColor="@color/black_text"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="7dp"
        android:text="登录密码用于手机端、PDA端和电脑端登录"
        android:textColor="@color/gray_text"
        android:textSize="12dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="50dp"
        android:text="密码"
        android:textColor="@color/black_text"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="33dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/passwordEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入密码(6-20位)"
            android:inputType="textPassword"
            android:maxLength="11"
            android:textColor="@color/black_text"
            android:textCursorDrawable="@drawable/phone_blue"
            android:textSize="17dp"
            tools:text="45454454515" />

        <Button
            android:id="@+id/clearButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_clear_button" />

        <Button
            android:id="@+id/hidePwdBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="33dp"
            android:background="@drawable/ic_hide_password" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:background="#eeeeee" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="33dp"
        android:background="@drawable/btn_enable"
        android:text="下一步"
        android:textColor="@color/white" />


</LinearLayout>