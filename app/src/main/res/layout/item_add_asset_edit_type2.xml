<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/assetEditLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="52dp"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/isRequiredImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:background="@drawable/ic_required" />

            <TextView
                android:id="@+id/typeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:minWidth="90dp"
                android:layout_marginLeft="24dp"
                android:textColor="@color/black_text"
                android:textSize="16dp"
                tools:text="资产编码" />

        </FrameLayout>

        <EditText
            android:id="@+id/assetEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:textColor="@color/black_text"
            android:textCursorDrawable="@drawable/phone_blue"
            android:textSize="16dp"
            tools:hint="输入资产编码" />

        <Button
            android:id="@+id/clearButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:background="@drawable/ic_clear_button"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#eeeeee" />

</LinearLayout>