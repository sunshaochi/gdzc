<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <View
        android:id="@+id/v_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#662a303f" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="46dp">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="56dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:background="@drawable/btn_blue_frame"
                android:text="@string/cancel"
                android:textColor="@color/blue"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="区域"
                android:textColor="@color/blue"
                android:textSize="17sp" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="56dp"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/btn_blue"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/item_divider" />

        <com.gengcon.android.fixedassets.module.addasset.widget.AreaWheelView
            android:id="@+id/main_wv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <!--<com.gengcon.android.fixedassets.widget.PickerScrollView-->
            <!--android:id="@+id/picker"-->
            <!--android:layout_marginBottom="15dp"-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="170dp" />-->
    </LinearLayout>
</LinearLayout>
