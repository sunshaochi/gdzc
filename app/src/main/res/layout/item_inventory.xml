<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_inventory"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:paddingLeft="15dp"
    android:paddingTop="13dp"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/inventory_status"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:background="@drawable/inventory_doing"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="12dp"
                tools:text="@string/inventory_doing"
                tools:textColor="@color/blue" />

            <TextView
                android:id="@+id/inventory_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:maxEms="13"
                android:singleLine="true"
                android:textColor="@color/black_text"
                android:textSize="16dp"
                tools:text="四季度盘点单" />

            <!--<View-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1" />-->

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/inventory_create_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/gray_text"
            android:textSize="14dp"
            tools:text="创建人：毛不易" />

        <TextView
            android:id="@+id/inventory_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:textColor="@color/light_gray_text"
            android:textSize="13dp"
            tools:text="2018-10-10" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/dottde_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/zc_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="正常"
                android:layout_marginRight="8dp"
                android:textColor="@color/gray_text"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/zc_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="16dp"
                tools:text="100" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/py_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="盘盈"
                android:layout_marginRight="8dp"
                android:textColor="@color/gray_text"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/py_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="16dp"
                tools:text="100" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pk_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pk_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="盘亏"
                android:layout_marginRight="8dp"
                android:textColor="@color/gray_text"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/pk_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="16dp"
                tools:text="100" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>